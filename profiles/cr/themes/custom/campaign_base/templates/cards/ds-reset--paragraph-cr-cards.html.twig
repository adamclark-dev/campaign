{% set bg_colour = field_cr_cards_background['#items'][0].value %}
{% set layoutClass = field_cr_cards_feature_layout['#items'].value ? 'cards--feature-layout' : '' %}

{%
set classes = [
'cards',
'paragraph',
'contextual-region',
layoutClass,
bg_colour,
]
%}

<div{{ attributes.addClass(classes) }}>
	{% if field_cr_cards_title %}
	<h3 class="cards__title">{{ field_cr_cards_title }}</h3>
	{% endif %}
	<div class="cards__wrapper">
	    {{ field_cr_cards_card_reference }}
	</div>
</div>