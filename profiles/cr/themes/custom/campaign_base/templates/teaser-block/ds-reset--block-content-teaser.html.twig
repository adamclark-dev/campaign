{% set link_colour = field_teaser_link_colour['#items'][0].value %}
{% set link_target = field_cw_link_target['#items'][0].value ? '_black' : '_self' %}
{% set youtube_link = field_teaser_you_tube_link['#items'][0].value ? 'lightcase' : '' %}

<article{{ attributes.addClass('teaser-block', 'clearfix') }}>
  <a href="{{ field_teaser_link_address }}" target="{{ link_target }}"></a>
  {{ title_suffix.contextual_links }} 
    <div class="teaser-block__image">
      <a rel="{{ youtube_link }}" class="{{ youtube_link }}" href="{{ field_teaser_link_address }}" target="{{ link_target }}">
        {{ field_teaser_image }}
      </a>
    </div>
    <div class="teaser-block__body bg--white">
      {{ body }}
      <div class="teaser-block__link">
        <span>{{ field_teaser_link_title }}</span>
      </div>
    </div> 
</article>
