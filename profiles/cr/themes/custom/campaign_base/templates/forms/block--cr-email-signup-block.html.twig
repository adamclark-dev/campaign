{# Added tweaked class name (block--cr-email-signup) to keep this consistent with default 
  Drupal naming, at least until the new ESUs have their own custom templates #}
<div class="block-cr-email-signup block--cr-email-signup block--cr-email-signup--step-1 block--cr-email-signup--banner">
  <div class="block--cr-email-signup__inner-wrapper">
    <div class="cr-email-signup--messages">
      {{ content.initial_message }}
      {{ content.first_success_message }}
      {{ content.second_success_message }}
    </div>
    <div class="esu-errors messages messages--error"></div>
    {{ content|without('initial_message', 'first_success_message','second_success_message') }}
  </div>
</div>
