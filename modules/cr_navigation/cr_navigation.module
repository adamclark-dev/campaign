<?php

/**
 * @file
 * Attaches JS for dropdown menu nav action.
 */

function cr_navigation_theme_suggestions_alter(array &$suggestions, array $variables, $hook) {

  switch ($hook) {
    case 'menu':

      /*To refactor / improve*/
      if (isset($suggestions[0]) && $suggestions[0] === "menu__main") {
        $suggestions[] = "menu__main__feature";
      }

      break;
  }
}
